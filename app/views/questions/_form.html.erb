<%= form_for [@poll, @question] do |f| %>
	<% if @question.errors.any? %>
		<!-- error messages -->
	<% end %>
	
	<div class="field">
		<%= f.label :question %><br />
		<%= f.text_area :question, :rows => 8, class: 'span5' %><br />
	</div>
	<div class="field">
		<%= f.submit class: 'btn' %>
	</div>
<% end %>
