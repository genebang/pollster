<h3>Show Poll</h3>

<h4><%= @poll.title %></h4>

<%= link_to 'Edit Poll Name', edit_poll_path(@poll) %>
&nbsp;|&nbsp;
<%= link_to 'Add Question', new_poll_question_path(@poll) %>
&nbsp;|&nbsp;
<%= link_to 'Poll Index', polls_path %>

<div>
	<% @questions.each do |question| %>
		<p style="padding: 10px">
			<%= simple_format(question.question) %>
			
			<%= link_to 'Edit', edit_poll_question_path(@poll, question) %>
			&nbsp;|&nbsp;
			<%= link_to 'Delete', poll_question_path(@poll, question), method: :delete, data: { confirm: "Are you sure?" }%>

				<% if question.responses.size > 0 %>
					<div style="padding: 10px">
						Responses:
						<%= render question.responses %>
					</div>
				<% end %>

		</p>
	<% end %>
</div>
