<h3>Taker</h3>

<h4><%= @poll.title %></h4>

<div>
	<% @questions.each do |question| %>
		<p style="padding: 10px">
			<%= simple_format(question.question) %><br>
			<%#= link_to 'Delete', question, method: :delete, data: { confirm: "Are you sure?" }%>
			<%#= render 'responses/form' %>
			<%= form_for [question, @response] do |f| %>
				<!-- add error checking -->
				<div class="field">
					<%= f.label :response %>
					<%= f.text_area :response, rows: 3, class: 'span5' %>
				</div>
				<div class="field">
					<%= f.submit class: 'btn' %>
				</div>
			<% end %>

		</p>
	<% end %>
</div>
<div class="field">
	<%#= f.submit class: 'btn' %>
</div>

<%#= render @poll.questions %>